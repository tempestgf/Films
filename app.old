@app.route('/leave_review', methods=['POST'])
def leave_review():
    if 'username' not in session:
        flash('Debes iniciar sesión para dejar una reseña.', 'error')
        return redirect(url_for('login'))

    if request.method == 'POST':
        # Obtener los datos del formulario
        review = request.form.get('review')
        rating = request.form.get('rating')
        serie_id = request.form.get('serie_id')  # Cambiar 'season_id' por 'serie_id'
        username = session['username']

        # Validar los datos del formulario
        if not review or not rating or not serie_id:  # Cambiar 'season_id' por 'serie_id'
            flash('Todos los campos son obligatorios.', 'error')
            return redirect(url_for('index'))  # O redirigir a donde sea apropiado en tu aplicación

        try:
            # Convertir el rating y serie_id a int
            rating = int(rating)
            serie_id = int(serie_id)  # Cambiar 'season_id' por 'serie_id'
        except ValueError:
            flash('La puntuación y el número de temporada deben ser números enteros.', 'error')
            return redirect(url_for('index'))  # O redirigir a donde sea apropiado en tu aplicación

        # Insertar la reseña en la base de datos
        cursor = mydb.cursor()
        try:
            cursor.execute("""
                INSERT INTO resenyes (TemporadaID, NomUsuari, Critica, DataResenya, Puntuacio)
                VALUES (%s, %s, %s, CURDATE(), %s)
            """, (serie_id, username, review, rating))

            mydb.commit()
            flash('Tu reseña ha sido enviada con éxito.', 'success')

        except mysql.connector.Error as error:
            flash('Error al enviar la reseña: {}'.format(error), 'error')
            print(error)
            mydb.rollback()  # Revertir cualquier cambio en la base de datos si ocurre un error al insertar la reseña

        cursor.close()

    # Redirigir al usuario a la página de la serie con el ID de la temporada
    return redirect(url_for('serie', serie_id=serie_id))  # Cambiar 'season_id' por 'serie_id'










